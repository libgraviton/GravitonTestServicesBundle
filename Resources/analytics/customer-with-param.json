{
  "collection": "Customer",
  "route": "customer-date-with-param",
  "params": [
    {
      "name": "yearFrom",
      "required": true,
      "type": "integer"
    },
    {
      "name": "yearTo",
      "required": true,
      "type": "integer"
    }
  ],
  "type": "array",
  "cacheTime": 0,
  "aggregate": [
    {
      "$project": {
        "id": 1,
        "name": 1,
        "customerNumber": 1,
        "created_year": {
          "$cond": [
            {
              "$ifNull": [
                "$createDate",
                0
              ]
            },
            {
              "$year": "$createDate"
            },
            -1
          ]
        },
        "created_month": {
          "$cond": [
            {
              "$ifNull": [
                "$createDate",
                0
              ]
            },
            {
              "$month": "$createDate"
            },
            -1
          ]
        }
      }
    },
    {
      "$match": {
        "created_year": {
          "$gte": "${yearFrom}",
          "$lte": "${yearTo}"
        }
      }
    }
  ],
  "schema": {
    "title": "Customer by date range",
    "description": "List customers by date range ",
    "type": "object",
    "properties": {
      "_id": {
        "title": "ID",
        "description": "Unique identifier",
        "type": "string"
      },
      "customerNumber": {
        "title": "Customer number",
        "description": "Customer identification number",
        "type": "integer"
      },
      "name": {
        "title": "Name",
        "description": "Customer name",
        "type": "string"
      },
      "created_year": {
        "title": "Creation year",
        "description": "Creation year",
        "type": "integer"
      },
      "created_month": {
        "title": "Creation month",
        "description": "Creation month",
        "type": "integer"
      }
    }
  }
}
